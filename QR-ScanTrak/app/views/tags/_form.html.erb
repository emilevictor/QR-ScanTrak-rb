<%= form_for(@tag) do |f| %>
  <% if @tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:</h2>

      <ul>
      <% @tag.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :uniqueUrl %><br />
    <%= f.text_field :uniqueUrl %>
  </div>
  <div class="field">
    <%= f.label :points %><br />
    <%= f.number_field :points %>
  </div>
  <div class="field">
    <%= f.label :quizQuestion %><br />
    <%= f.text_area :quizQuestion %>
  </div>
  <div class="field">
    <%= f.label :quizAnswer %><br />
    <%= f.text_field :quizAnswer %>
  </div>
  <div class="field">
    Extra information (HTML allowed):<br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :latitude %> (*If left blank, will be autogenerated from address)<br />
    <%= f.text_field :latitude %>
  </div>
  <div class="field">
    <%= f.label :longitude %>(*If left blank, will be autogenerated from address)<br />
    <%= f.text_field :longitude %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <!--<div class="field">
    <%= f.label :createdBy %><br />
    <%= f.number_field :createdBy %>
  </div>-->
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
